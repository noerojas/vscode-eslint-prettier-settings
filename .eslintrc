{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "no-console": 1,
    "keyword-spacing": [
      "error",
      {
        "overrides": {
          "from": {
            "after": true
          },
          "import": {
            "after": true
          }
        }
      }
    ],
    "no-unused-vars": 1,
    "comma-dangle": 0,
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "hrefLeft",
          "hrefRight",
          "to"
        ],
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ],
    "arrow-body-style": [
      2,
      "as-needed"
    ],
    "func-names": [
      "error",
      "never"
    ],
    "no-return-assign": 0,
    "react/jsx-curly-spacing": [
      2,
      {
        "when": "always",
        "children": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "./webpack.*.js"
        ],
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  },
  "plugins": [
    "prettier"
  ]
}